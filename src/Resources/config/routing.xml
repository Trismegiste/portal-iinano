<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!-- step 1 : choose provider -->
    <route id="trismegiste_oauth_connect" pattern="/connect">
        <default key="_controller">TrismegistePortalBundle:Front:connect</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="front_index" pattern="/">
        <default key="_controller">TrismegistePortalBundle:Front:index</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="front_plan_list" pattern="/plan/list">
        <default key="_controller">TrismegistePortalBundle:Plan:list</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="front_plan_checkout" pattern="/plan/checkout/{sku}">
        <default key="_controller">TrismegistePortalBundle:Plan:checkout</default>
        <requirement key="sku">[a-z]+</requirement>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="order_next_step" pattern="/order/next">
        <default key="_controller">TrismegistePortalBundle:Order:nextStep</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="payment_paynow" pattern="/payment/paynow">
        <default key="_controller">TrismegistePortalBundle:Payment:payNow</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="user_account" pattern="/user/profile">
        <default key="_controller">TrismegistePortalBundle:User:show</default>
        <requirement key="_method">GET</requirement>
    </route>


</routes>
