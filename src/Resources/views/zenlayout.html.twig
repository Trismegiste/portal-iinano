{# Twig template with centered not-too-large content #}
{% extends 'TrismegistePortalBundle::purecss.html.twig' %}

{% block full_body %}
    <div class="content">
        <div class="pure-g">
            <div class="pure-u-sm-1-4 pure-u-xl-1-3"></div>
            <div class="pure-u-1 pure-u-sm-1-2 pure-u-xl-1-3">
                <section class="widget">
                    {% block centered_column %}
                    {% endblock %}
                </section>
            </div>
        </div>
    </div>
{% endblock %}